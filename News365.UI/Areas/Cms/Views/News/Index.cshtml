@model IEnumerable<NewsModel>

@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
}

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="filter"></i></span>
                        NEWS
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            News List
            <div class="rid">
                <button data-controler="Categories" data-action="Order" class="btn btn-sm btn-secondary orderBtn">Short by</button>
                <a asp-action="Create" class="btn btn-sm btn-primary">Create News</a>
            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table-shorting">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Body</th>
                        <th>Category Name</th>
                        <th>File</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id">
                            <td>@item.Title</td>
                            <td>@item.Body</td>
                            <td>@item.CategoryId</td>
                            <td><a href="./assets/file/news/@item.FileCode">indir</a></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-datatable btn-icon btn-transparent-dark me-2"><i data-feather="more-vertical"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete it?')" class="btn btn-datatable btn-icon btn-transparent-dark"><i data-feather="trash-2"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets-cms/js/datatables/datatables-simple-demo.js"></script>
}


