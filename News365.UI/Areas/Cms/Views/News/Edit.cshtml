@model NewsVM
@{
    ViewData["Title"] = "Edit";

}
<form method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit News</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="NewsModel.Title"></label>
            <input asp-for="NewsModel.Title" class="form-control" />
            <span asp-validation-for="NewsModel.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewsModel.Body"></label>
            <input asp-for="NewsModel.Body" class="form-control" />
            <span asp-validation-for="NewsModel.Body" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewsModel.CategoryId"></label>
            <input asp-for="NewsModel.CategoryId" class="form-control" />
            <span asp-validation-for="NewsModel.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewsModel.FileCode"></label>
            <input asp-for="NewsModel.FileCode" class="form-control" />
            <span asp-validation-for="NewsModel.FileCode" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="widht:150px">Edit</button>
        <a asp-controller="News" asp-action="Index" class="btn btn-secondary" style="150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts
{
@{
    <partial name="_ValidationScriptsPartial" />
}
}