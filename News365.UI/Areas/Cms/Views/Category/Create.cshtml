@model CategoryVM
@{
    ViewData["Title"] = "Create";
}
<form method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="widht:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts
{
    @{
      <partial name="_ValidationScriptsPartial"/>
     }
}